---
// Glassy Button Component - Solo el contenido interactivo

// CONFIGURACIÓN DEL SHOWCASE
// Aquí defines el color de fondo o imagen del contenedor para este componente
export const showcaseConfig = {
   backgroundColor: '#000000', // Descomenta para usar color sólido
  // backgroundImage: '/applebg.jpeg', // Usando imagen de fondo 
  
  // Solo usa uno de los dos: backgroundColor O backgroundImage, no ambos a la vez
};
---

<!-- Interactive Components Wrapper -->
<div class="interactive-wrapper">
  <!-- Menu Component -->
  <div class="liquidGlass-container menu-container">
    <div class="liquidGlass-wrapper menu">
      <div class="liquidGlass-effect"></div>
      <div class="liquidGlass-tint"></div>
      <div class="liquidGlass-shine"></div>
      <div class="liquidGlass-text">
        <div>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
            <path d="M8 3v10M3 8h10"/>
          </svg>
          New File
        </div>
        <div>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M13 2H6L3 5v9a1 1 0 0 0 1 1h9a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1z"/>
            <path d="M3 5h3V2"/>
          </svg>
          Open
        </div>
        <div>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="8" cy="8" r="6"/>
            <path d="M8 5v3l2 2"/>
          </svg>
          Settings
        </div>
      </div>
    </div>
  </div>

  <!-- Dock Component -->
  <div class="liquidGlass-container dock-container">
    <div class="liquidGlass-wrapper dock">
      <div class="liquidGlass-effect"></div>
      <div class="liquidGlass-tint"></div>
      <div class="liquidGlass-shine"></div>
      <div class="liquidGlass-text">
        <div class="dock-items">
          <span class="dock-icon">
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
              <rect x="8" y="12" width="24" height="18" rx="2" stroke="currentColor" stroke-width="2.5" fill="none"/>
              <path d="M8 18h24" stroke="currentColor" stroke-width="2.5"/>
            </svg>
          </span>
          <span class="dock-icon">
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
              <circle cx="20" cy="20" r="10" stroke="currentColor" stroke-width="2.5" fill="none"/>
              <path d="M20 14v6l4 4" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
            </svg>
          </span>
          <span class="dock-icon">
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
              <circle cx="20" cy="13" r="4" stroke="currentColor" stroke-width="2.5" fill="none"/>
              <path d="M20 17v6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
              <path d="M14 23c0-3.3 2.7-6 6-6s6 2.7 6 6v7h-12v-7z" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
            </svg>
          </span>
          <span class="dock-icon">
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
              <rect x="10" y="8" width="20" height="24" rx="2" stroke="currentColor" stroke-width="2.5" fill="none"/>
              <path d="M15 14h10M15 20h10M15 26h6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
            </svg>
          </span>
          <span class="dock-icon">
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
              <path d="M14 28l6-8 6 8" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
              <circle cx="16" cy="16" r="3" stroke="currentColor" stroke-width="2.5" fill="none"/>
              <rect x="10" y="10" width="20" height="20" rx="3" stroke="currentColor" stroke-width="2.5" fill="none"/>
            </svg>
          </span>
          <span class="dock-icon">
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
              <circle cx="20" cy="20" r="10" stroke="currentColor" stroke-width="2.5" fill="none"/>
              <circle cx="20" cy="20" r="3" fill="currentColor"/>
              <path d="M20 10v4M20 26v4M10 20h4M26 20h4" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
            </svg>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Button Component -->
  <div class="liquidGlass-container button-container">
    <div class="liquidGlass-wrapper button">
      <div class="liquidGlass-effect"></div>
      <div class="liquidGlass-tint"></div>
      <div class="liquidGlass-shine"></div>
      <div class="liquidGlass-text">
        <span class="button-text">
          Continue
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M6 3l5 5-5 5"/>
          </svg>
        </span>
      </div>
    </div>
  </div>
</div>

<style>
  .interactive-wrapper {
    display: flex;
    gap: 16px;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    position: relative;
    z-index: 10;
  }

  /* Contenedores con tamaño fijo */
  .liquidGlass-container {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .menu-container {
    width: 160px;
    height: 120px;
  }

  .dock-container {
    width: 320px;
    height: 80px;
  }

  .button-container {
    width: 200px;
    height: 80px;
  }

  .liquidGlass-wrapper {
    position: relative;
    display: flex;
    font-weight: 600;
    overflow: hidden;
    color: white;
    cursor: pointer;
    box-shadow: 0 6px 6px rgba(0, 0, 0, 0.2), 0 0 20px rgba(0, 0, 0, 0.1);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 2.2);
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
  }

  .liquidGlass-wrapper:active {
    transform: scale(0.96);
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.2), 0 0 10px rgba(0, 0, 0, 0.1);
    transition: all 0.1s cubic-bezier(0.175, 0.885, 0.32, 1);
  }

  .liquidGlass-effect {
    position: absolute;
    z-index: 0;
    inset: 0;
    backdrop-filter: blur(3px);
    filter: url(#glass-distortion);
    overflow: hidden;
    isolation: isolate;
  }

  .liquidGlass-tint {
    z-index: 1;
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.25);
  }

  .liquidGlass-shine {
    position: absolute;
    inset: 0;
    z-index: 2;
    overflow: hidden;
    box-shadow: inset 2px 2px 1px 0 rgba(255, 255, 255, 0.5),
      inset -1px -1px 1px 1px rgba(255, 255, 255, 0.5);
  }

  .liquidGlass-text {
    z-index: 3;
    font-size: 1rem;
    color: white;
  }

  /* Menu styles */
  .menu,
  .menu > div {
    padding: 0.3rem;
    border-radius: 1.2rem;
  }

  .menu:hover {
    padding: 0.4rem;
    border-radius: 1.2rem;
  }

  .menu .liquidGlass-text > div {
    font-size: 14px;
    color: white;
    padding: 0.3rem 0.6rem;
    border-radius: 0.6rem;
    transition: all 0.1s ease-in;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .menu .liquidGlass-text > div svg {
    flex-shrink: 0;
  }

  .menu .liquidGlass-text > div:hover {
    background-color: rgba(255, 255, 255, 0.5);
    box-shadow: inset -2px -2px 2px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(2px);
  }

  /* Dock styles */
  .dock {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    border-radius: 1.5rem;
    padding: 0.4rem;
  }

  .dock,
  .dock > div {
    border-radius: 1.5rem;
  }

  .dock:hover {
    padding: 0.5rem;
    border-radius: 1.8rem;
  }

  .dock:hover > div {
    border-radius: 1.8rem;
  }

  .dock-items {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .dock-icon {
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 2.2);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .dock-icon svg {
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  .dock-icon:hover {
    transform: scale(1.15) translateY(-6px);
  }

  /* Button styles */
  .button {
    padding: 0.8rem 1.8rem;
    border-radius: 2rem;
  }

  .button,
  .button > div {
    border-radius: 2rem;
  }

  .button:hover {
    padding: 1rem 2rem;
  }

  .button:hover > div {
    border-radius: 2.5rem;
  }

  .button-text {
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0.3px;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 2.2);
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .button-text svg {
    transition: transform 0.3s ease;
  }

  .button:hover .button-text svg {
    transform: translateX(3px);
  }

  .button:hover .button-text {
    transform: scale(0.95);
  }
</style>