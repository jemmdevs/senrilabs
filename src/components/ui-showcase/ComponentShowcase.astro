---
// Contenedor reutilizable para los componentes showcase
interface Props {
  backgroundColor?: string;
  backgroundImage?: string;
  id: string;
  title: string;
  date: string;
  description: string;
}

const { 
  backgroundColor = '#000000', 
  backgroundImage,
  id,
  title,
  date,
  description
} = Astro.props;
---

<section id={id} class="mb-16 lg:mb-24 scroll-mt-12">
  <!-- Component Header -->
  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4 gap-2">
    <h2 class="text-[18px] lg:text-[20px] font-semibold text-black leading-tight">{title}</h2>
    <span class="text-[14px] text-[#86868b]">{date}</span>
  </div>
  
  <!-- Component Description -->
  <p class="text-[14px] text-[#86868b] leading-relaxed mb-6 lg:mb-8">
    {description}
  </p>
  
  <!-- Component Container -->
  <div 
    class="component-container rounded-2xl p-8 lg:p-16 w-full flex items-center justify-center relative overflow-hidden"
    style={backgroundImage 
      ? `background-image: url('${backgroundImage}'); background-size: cover; background-position: center;` 
      : `background-color: ${backgroundColor};`}
  >
    <slot />
  </div>
</section>

<style>
  .component-container {
    min-height: 200px;
  }

  /* Para pantallas grandes */
  @media (min-width: 1024px) {
    .component-container {
      min-height: 350px;
    }
  }
</style>

