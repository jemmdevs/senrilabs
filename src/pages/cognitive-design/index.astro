</Layout>

<style>
  /* Gradient text from light gray to black */
  .gradient-text {
    background: linear-gradient(to right, #707682, #252e3a, #000000);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 450;
  }

  .cognitive-design-title {
    font-weight: 700;
    font-size: 1.39em;
    display: inline;
  }

  /* Bento Grid Layout - Masonry style with CSS columns */
  .bento-grid {
    column-count: 1;
    column-gap: 24px;
  }

  @media (min-width: 768px) {
    .bento-grid {
      column-count: 2;
      column-gap: 32px;
    }
  }

  @media (min-width: 1024px) {
    .bento-grid {
      column-count: 3;
      column-gap: 40px;
    }
  }

  /* Bento Items - Prevent column breaks inside items */
  .bento-item {
    display: inline-block;
    width: 100%;
    margin-bottom: 24px;
    break-inside: avoid;
  }

  @media (min-width: 768px) {
    .bento-item {
      margin-bottom: 32px;
    }
  }

  @media (min-width: 1024px) {
    .bento-item {
      margin-bottom: 40px;
    }
  }

  /* Card styling */
  .component-card {
    background-color: #FFFFFF;
    border-radius: 6px;
    box-shadow: 
      0 0 1px rgba(0, 0, 0, 0.04),
      4px 0 8px rgba(0, 0, 0, 0.08),
      -4px 0 8px rgba(0, 0, 0, 0.08),
      0 4px 6px rgba(0, 0, 0, 0.04);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .component-card:hover {
    box-shadow: 
      0 0 2px rgba(0, 0, 0, 0.06),
      6px 0 12px rgba(0, 0, 0, 0.12),
      -6px 0 12px rgba(0, 0, 0, 0.12),
      0 6px 10px rgba(0, 0, 0, 0.06);
    transform: translateY(-3px);
  }

  /* Guidelines Link - Apple Style */
  .guidelines-link {
    transition: all 0.2s ease;
  }

  .guidelines-link:hover svg {
    transform: translateX(2px);
  }
</style>
