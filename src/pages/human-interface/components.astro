---
import Layout from '../../layouts/Layout.astro';
import Navbar from '@/components/Navbar';
import Footer from '@/components/Footer.astro';
import ComponentShowcase from '@/components/ui-showcase/ComponentShowcase.astro';
import GlassyButton, { showcaseConfig as glassyButtonConfig } from '@/components/ui-showcase/GlassyButton.astro';
import FeatureCards, { showcaseConfig as featureCardsConfig } from '@/components/ui-showcase/FeatureCards.astro';
import SwitchButton, { showcaseConfig as switchButtonConfig } from '@/components/ui-showcase/SwitchButton.astro';
import NotificationStack, { showcaseConfig as notificationStackConfig } from '@/components/ui-showcase/NotificationStack.astro';
import ThemeSwitcher, { showcaseConfig as themeSwitcherConfig } from '@/components/ui-showcase/ThemeSwitcher.astro';
import KanbanBoard, { showcaseConfig as kanbanBoardConfig } from '@/components/ui-showcase/KanbanBoard.astro';

---

<Layout title="Components - Human Interface">
  <Navbar client:idle />
  
  <main class="lg:ml-64 min-h-screen bg-white pt-20 lg:pt-12 flex flex-col lg:flex-row">
    <!-- Main Content -->
    <div class="flex-1 px-6 lg:pl-12 lg:pr-8">
      <!-- Back link -->
      <div class="mb-8 lg:mb-12">
        <a href="/" class="text-[#6B7280] hover:text-black transition-colors text-sm underline">
          Back
        </a>
      </div>

      <!-- Glassy Button Component -->
      <ComponentShowcase
        id="glassy-button"
        title="Glassy button"
        date="Oct 28, 2025"
        description="A translucent button with frosted glass effect and smooth interactions, inspired by Apple's Liquid Glass design language."
        {...glassyButtonConfig}
      >
        <GlassyButton />
      </ComponentShowcase>

      <!-- Feature Cards Component -->
      <ComponentShowcase
        id="feature-cards"
        title="Feature Cards"
        date="Nov 2, 2025"
        description="Interactive cards with dynamic hover effects and smooth transitions. The background follows your cursor across the grid."
        {...featureCardsConfig}
      >
        <FeatureCards />
      </ComponentShowcase>

     <!-- iOS Switch Component -->
      <ComponentShowcase
        id="ios-switch"
        title="iOS Switch"
        date="Nov 14, 2025"
       description="Realistic iOS-style toggle switches with drag/swipe support and multiple color themes."
       {...switchButtonConfig}
      >
      <SwitchButton />
    </ComponentShowcase>
      
    <!-- En el main, donde van los componentes -->
    <ComponentShowcase
      id="notification-stack"
      title="Notification Stack"
      date="Nov 14, 2025"
      description="iOS-style notification system with stacking effect, glassmorphism, and smooth animations. Hover to expand the stack."
      {...notificationStackConfig}
     >
     <NotificationStack />
  </ComponentShowcase>

    <ComponentShowcase
      id="theme-switcher"
      title="Theme Switcher"
      date="Nov 15, 2025"
      description="Interactive theme switcher with minimal liquid glass effect and three color schemes. Features smooth animations and minimal canvas patterns."
      {...themeSwitcherConfig}
     >
     <ThemeSwitcher />
  </ComponentShowcase>

  <!-- Kanban Board Component -->
<ComponentShowcase
id="kanban-board"
title="Kanban Board"
date="Nov 16, 2025"
description="Drag-and-drop task management board with multiple columns. Move tasks between Backlog, In Progress, Review, and Done. Includes priorities, assignees, and due dates."
{...kanbanBoardConfig}
>
<KanbanBoard />
</ComponentShowcase>


    </div>

    <!-- Side Navigation Menu (Right) - Hidden on mobile -->
    <aside class="hidden lg:block w-64 pl-8 pr-12 sticky top-1/2 -translate-y-1/2 h-fit">
      <nav class="space-y-2" id="component-nav">
        <a href="#glassy-button" class="nav-item block text-[14px] text-gray-400 transition-all duration-300" data-target="glassy-button">
          Glassy Button
        </a>
        <a href="#feature-cards" class="nav-item block text-[14px] text-gray-400 transition-all duration-300" data-target="feature-cards">
          Feature Cards
        </a>
        <a href="#ios-switch" class="nav-item block text-[14px] text-gray-400 transition-all duration-300" data-target="ios-switch">
          iOS Switch
        </a>
        <a href="#notification-stack" class="nav-item block text-[14px] text-gray-400 transition-all duration-300" data-target="notification-stack">
          Notification Stack
        </a>
        <a href="#theme-switcher" class="nav-item block text-[14px] text-gray-400 transition-all duration-300" data-target="theme-switcher">
          Theme Switcher
        </a>
        <a href="#kanban-board" class="nav-item block text-[14px] text-gray-400 transition-all duration-300" data-target="kanban-board">
          Kanban Board
        </a>
        <a href="#dropdown-menu" class="nav-item block text-[14px] text-gray-400 transition-all duration-300" data-target="dropdown-menu">
          Dropdown Menu
        </a>
        <a href="#notification-card" class="nav-item block text-[14px] text-gray-400 transition-all duration-300" data-target="notification-card">
          Notification Card
        </a>
        
      
      </nav>
    </aside>
  </main>
  
  <Footer />

  <!-- Hidden SVG for glass distortion effect -->
  <svg style="display: none">
    <filter
      id="glass-distortion"
      x="0%"
      y="0%"
      width="100%"
      height="100%"
      filterUnits="objectBoundingBox"
    >
      <feTurbulence
        type="fractalNoise"
        baseFrequency="0.01 0.01"
        numOctaves="1"
        seed="5"
        result="turbulence"
      />

      <feComponentTransfer in="turbulence" result="mapped">
        <feFuncR type="gamma" amplitude="1" exponent="10" offset="0.5" />
        <feFuncG type="gamma" amplitude="0" exponent="1" offset="0" />
        <feFuncB type="gamma" amplitude="0" exponent="1" offset="0.5" />
      </feComponentTransfer>

      <feGaussianBlur in="turbulence" stdDeviation="3" result="softMap" />

      <feSpecularLighting
        in="softMap"
        surfaceScale="5"
        specularConstant="1"
        specularExponent="100"
        lighting-color="white"
        result="specLight"
      >
        <fePointLight x="-200" y="-200" z="300" />
      </feSpecularLighting>

      <feComposite
        in="specLight"
        operator="arithmetic"
        k1="0"
        k2="1"
        k3="1"
        k4="0"
        result="litImage"
      />

      <feDisplacementMap
        in="SourceGraphic"
        in2="softMap"
        scale="150"
        xChannelSelector="R"
        yChannelSelector="G"
      />
    </filter>
  </svg>
</Layout>

<style>
  /* Smooth scroll for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Navigation items bounce effect (Apple-style) */
  .nav-item {
    transform-origin: left center;
    position: relative;
    padding: 4px 0 4px 12px;
  }

  /* Active indicator - vertical line (Apple style) */
  .nav-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 2px;
    height: 16px;
    background: rgb(0, 0, 0);
    border-radius: 1px;
    opacity: 0;
    transform: translateY(-50%) scaleY(0.3);
    transition: 
      opacity 0.6s cubic-bezier(0.4, 0.0, 0.2, 1),
      transform 0.7s cubic-bezier(0.175, 0.885, 0.32, 1.2);
  }

  .nav-item.active::before {
    opacity: 1;
    transform: translateY(-50%) scaleY(1);
  }

  .nav-item.active {
    color: rgb(0, 0, 0);
    transition: color 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
  }
  
  .nav-item {
    transition: color 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

  .nav-item:hover {
    color: rgb(0, 0, 0);
    transform: scale(1.08) translateX(3px);
    transition: 
      color 0.3s cubic-bezier(0.4, 0.0, 0.2, 1),
      transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.2);
  }

  .nav-item:active {
    transform: scale(0.95) translateX(2px);
    transition: 
      color 0.1s cubic-bezier(0.4, 0.0, 0.2, 1),
      transform 0.15s cubic-bezier(0.4, 0.0, 0.2, 1);
  }
  
  /* Suavizar la transición entre estados */
  .nav-item:not(:hover):not(:active) {
    transition: 
      color 0.4s cubic-bezier(0.4, 0.0, 0.2, 1),
      transform 0.6s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

</style>

<script>
  // Sistema de navegación activa basado en scroll
  document.addEventListener('DOMContentLoaded', () => {
    const navItems = document.querySelectorAll('.nav-item');
    const sections = document.querySelectorAll('section[id]');
    
    // Función para actualizar el item activo en el menú
    const updateActiveNavItem = (id: string) => {
      navItems.forEach(item => {
        const target = item.getAttribute('data-target');
        if (target === id) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });
    };

    // Configuración del Intersection Observer
    const observerOptions = {
      root: null,
      rootMargin: '-20% 0px -70% 0px', // Activar cuando la sección esté en el tercio superior
      threshold: 0
    };

    // Crear el observer
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.getAttribute('id');
          if (id) {
            updateActiveNavItem(id);
            // Actualizar URL sin hacer scroll
            if (history.replaceState) {
              history.replaceState(null, '', `#${id}`);
            }
          }
        }
      });
    }, observerOptions);

    // Observar todas las secciones
    sections.forEach(section => {
      observer.observe(section);
    });

    // Manejar clicks en la navegación
    navItems.forEach(item => {
      item.addEventListener('click', (e) => {
        const target = item.getAttribute('data-target');
        if (target) {
          // Actualizar inmediatamente el estado activo
          updateActiveNavItem(target);
        }
      });
    });

    // Activar el primer item si no hay hash en la URL
    if (!window.location.hash && sections.length > 0) {
      const firstId = sections[0].getAttribute('id');
      if (firstId) {
        updateActiveNavItem(firstId);
      }
    } else if (window.location.hash) {
      // Si hay hash en la URL, activar ese item
      const id = window.location.hash.substring(1);
      updateActiveNavItem(id);
    }
  });
</script>

