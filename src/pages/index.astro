<style>
  /* Greeting text - smaller size */
  .greeting-text {
    font-size: 0.95rem;
    font-weight: 500;
    background: linear-gradient(to right, #6b7280, #374151, #1f2937);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Main text - responsive sizing */
  .main-text {
    font-size: 24px;
    font-weight: 700;
    line-height: 28px;
  }

  @media (min-width: 1024px) {
    .main-text {
      font-size: 42px;
      line-height: 44px;
    }
  }

  /* Gradient text - more subtle */
  .gradient-text {
    background: linear-gradient(to right, #6b7280, #374151, #1f2937);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Pronunciation styling - smaller and elevated, solid black */
  .pronunciation {
    vertical-align: super;
    font-size: 0.58em;
    margin-left: 0.3em;
    background: none;
    -webkit-text-fill-color: #000000;
    color: #000000;
  }

  /* Fade-in animation for content */
  .fade-in-content {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Stagger animation for sections */
  section:nth-child(2) {
    animation-delay: 0.2s;
  }

  section:nth-child(3) {
    animation-delay: 0.4s;
  }

  /* Bento Grid Layout - Masonry style with CSS columns */
  .bento-grid {
    column-count: 1;
    column-gap: 24px;
  }

  @media (min-width: 768px) {
    .bento-grid {
      column-count: 2;
      column-gap: 32px;
    }
  }

  @media (min-width: 1024px) {
    .bento-grid {
      column-count: 3;
      column-gap: 40px;
    }
  }

  /* Bento Items - Prevent column breaks inside items */
  .bento-item {
    display: inline-block;
    width: 100%;
    margin-bottom: 24px;
    break-inside: avoid;
  }

  @media (min-width: 768px) {
    .bento-item {
      margin-bottom: 32px;
    }
  }

  @media (min-width: 1024px) {
    .bento-item {
      margin-bottom: 40px;
    }
  }

  /* Card styling - matching cognitive-design */
  .project-card {
    background-color: #FFFFFF;
    border-radius: 6px;
    box-shadow: 
      0 0 1px rgba(0, 0, 0, 0.04),
      4px 0 8px rgba(0, 0, 0, 0.08),
      -4px 0 8px rgba(0, 0, 0, 0.08),
      0 4px 6px rgba(0, 0, 0, 0.04);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover {
    box-shadow: 
      0 0 2px rgba(0, 0, 0, 0.06),
      6px 0 12px rgba(0, 0, 0, 0.12),
      -6px 0 12px rgba(0, 0, 0, 0.12),
      0 6px 10px rgba(0, 0, 0, 0.06);
    transform: translateY(-3px);
  }
</style>